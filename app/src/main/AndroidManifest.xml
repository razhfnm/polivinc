<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="31">

        <!-- Actividad de Splash Screen -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- Actividad del panel principal (Dashboard) -->
        <activity
            android:name=".DashboardActivity"
            android:exported="true" />
        <activity android:name=".DetailsTeamDialog"/>

        <!-- Actividades relacionadas con avances -->
        <activity
            android:name=".GroupAdvancesActivity"
            android:exported="false" />
        <activity
            android:name=".PersonalAdvancesActivity"
            android:exported="true" />
        <activity
            android:name=".IdeaContributionActivity"
            android:exported="false" />
        <activity android:name=".TeamDetailsActivity"/>

        <!-- Actividades relacionadas con roles -->

        <activity
            android:name=".RoleSelectionActivity"
            android:exported="false" />

        <!-- Actividad de infografía -->
        <activity
            android:name=".ManageTeamProfessorsActivity"
            android:exported="false" />
        <activity android:name=".RegisterActivity"/>

        <!-- Actividad para el profesor -->
        <activity
            android:name=".ProfessorActivity"
            android:exported="false" />
<activity android:name=".SubtasksActivity"/>

        <!-- Actividad de política de privacidad -->
        <activity
            android:name=".PrivacyPolicyActivity"
            android:exported="false" />
    </application>
</manifest>